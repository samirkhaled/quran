                app:layout_constraintHorizontal_bias="0.474"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book3" />
            <TextView
                android:id="@+id/book5"
                android:layout_width="match_parent"
